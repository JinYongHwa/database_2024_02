<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script>
        function moveView(no) {
            location.href = "/view/" + no
        }
    </script>
</head>

<body>
    <div class="container">

        <table class="table">
            <tr>
                <td>글번호</td>
                <td>제목</td>
                <td>작성자</td>
                <td>조회수</td>
                <td>작성일</td>
            </tr>
            <% boards.forEach(board=>{%>
                <tr onclick="moveView(<%=board.no%>)">
                    <td class="text-center">
                        <%=board.no%>
                    </td>
                    <td>
                        <%=board.title%>
                    </td>
                    <td>
                        <%=board.writer%>
                    </td>
                    <td>
                        <%=board.hits%>
                    </td>
                    <td>
                        <%=moment(board.writeDate).format("YYYY-MM-DD HH:mm") %>
                    </td>
                </tr>
                <%})%>
        </table>

        <div class="text-end">
            <a href="/write" class="btn btn-primary">글쓰기</a>
        </div>

    </div>





</body>

</html>